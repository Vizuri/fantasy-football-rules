package com.vizuri.fantasy_football_brms;

import com.vizuri.rules.domain.FantasyLeague;
import com.vizuri.rules.domain.FantasyTeam;
import com.vizuri.rules.domain.Violation;

rule "Fantasy League Validation"
	dialect "mvel"
	when
		There is a Fantasy League
		- There is a size of Fantasy Teams greater than or equal to 2
		- There is a size of Fantasy Teams less than or equal to 8
	then
		>$fl.getViolationList().add( new Violation() ); 
end
